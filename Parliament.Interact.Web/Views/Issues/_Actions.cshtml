@model Parliament.Interact.Web.Models.IssueViewModel

<div class="parl-action-items col-xs-12">
    <h2>What can I do about it?</h2>
    @foreach (var action in Model.ActionsItems)
    {
        <div class="parl-action-item">
            <h3>@action.Title</h3>
            <div class="parl-action-time">
                @action.Eta
            </div>
            <div class="parl-action-basic-content">
                @Html.Raw(action.BasicContent)
            </div>
            <div class="parl-action-content">
                @Html.Partial(action.ActionView, action.ActionModel)
            </div>
        </div>
    }

    <!--Hard coded for now - should be an action-->

    <div class="parl-action-social-media">
        <h3>Help raise awareness</h3>
        <div class="parl-action-time">
            Approx 2mins
        </div>
        <div class="parl-action-basic-content">
            <p>Share this page about Academy Schools with your social network, friends, family and colleagues to get more people involved in this issue.</p>
        </div>
        <div id="shareIcons" class="parl-action-content share-icons">

        </div>
    </div>

</div>