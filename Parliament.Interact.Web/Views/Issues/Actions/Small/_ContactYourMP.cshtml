@model Parliament.Interact.Core.ActionsViewFactory.Items.Models.ContactYourMPModel
<div class="parl-contact-your-mp parl-action-small">
    @using (Ajax.BeginForm("GetMPLink", "Issues",
                                        new AjaxOptions
                                        {
                                            HttpMethod = "POST",
                                            InsertionMode = InsertionMode.Replace,
                                            UpdateTargetId = "postcode-form"
                                        }))
    {
        <div id="postcode-form col-xs-12 row">
            @Html.TextBoxFor(x => x.Postcode, new { @class = "find-my-mp-input col-xs-12 col-sm-12 col-md-6", @placeholder = "My Postcode" })
            <input type="submit" class="btn parl-button parl-secondary-button find-my-mp-button col-xs-12 col-sm-12 col-md-offset-1 col-md-5" id="postcode-button" value="FIND MY MP" onClick="ga('send', 'event', 'call-to-actions', 'click', 'all events');" />
            <span class="error-message">@Model.ErrorMessage</span>
        </div>
    }
</div>

