@model Parliament.Interact.Core.ActionsViewFactory.Items.Models.PetitionsModel

<div class="parl-petitions parl-action-small">
    <div class="parl-top-petitions">
        <h5>Top @Model.MaxCount relevant petitions on petition.parliament.uk</h5>
        <div class="parl-petition-items">
            @foreach (var petition in Model.Petitions)
            {
                <div class="parl-petition-item col-xs-12 row">
                    <div class="parl-petition-item-number col-md-1 col-sm-1 hidden-xs">
                        #@petition.LogicalOrder
                    </div>
                    <div class="parl-petition-item-link col-md-7 col-sm-9 col-xs-12">
                        <a href="@petition.Link" onClick="ga('send', 'event', 'call-to-actions', 'click', 'all events');">@petition.LinkName</a>
                    </div>
                    <div class="parl-petition-item-signed col-md-4 col-sm-2 hidden-xs">
                        @petition.SignatureCount
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="parl-button-group">
        <a id="view-petitions" class="btn btn-success col-xs-12 col-sm-4" href="@Model.ViewAllUrl" onClick="ga('send', 'event', 'call-to-actions', 'click', 'all events');">VIEW RELEVANT PETITIONS</a>
        <a id="start-petition" class="btn btn-success col-xs-12 col-sm-4" href="@Model.CreateUrl" onClick="ga('send', 'event', 'call-to-actions', 'click', 'all events');">START A NEW PETITION</a>
    </div>
</div>

