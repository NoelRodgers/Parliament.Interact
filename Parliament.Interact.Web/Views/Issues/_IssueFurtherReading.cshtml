@model Parliament.Interact.Web.Models.IssueViewModel

<div class="further-readings col-md-6 col-xs-12">
    <h2>Further reading</h2>
    @foreach(var reading in Model.FurtherReadings)
    {
        <div>
            <a href=@reading.LinkUrl target="_blank">@reading.LinkName</a>
            @if(reading.DisplayExternalIcon == true)
            {
                <i class="fa fa-external-link"></i>
            }
        </div>
    }
</div>